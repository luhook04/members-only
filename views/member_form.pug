extends layout 

block content 
	if (!currentUser.isMember)
		form(method='POST' action='/member')
			h2= title
			.member-password
				label(for="passcode") Password:
				input(type='password', name="passcode" required='true')
			button(type='submit') Enter

		if error 
			p #{error}

		if errors
			ul 
				for error in errors 
					li!= error.msg
	
	else 
		div(class='member-message')
			h2 Congrats! You're a member!
			a(href='/') Home