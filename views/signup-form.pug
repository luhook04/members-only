extends layout

block content 
	form(method='POST' action='')
		.form-signup
			label(for="username") Username: 
			input(type='text', name="username" required='true' maxLength='15')
			if error 
				p(style="color: red") #{error}
		.form-signup 
			label(for='password') Password: 
			input(type='password', name="password" required='true')
		.form-signup 
			label(for="password-confirm") Confirm Password: 
			input(type="password", required='true' name="password-confirm")
		button(type='submit') Register
	
	if errors
		ul 
			for error in errors 
				li!= error.msg